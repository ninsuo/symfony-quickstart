{# BaseBundle::base.html.twig #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ include('BraincraftedBootstrapBundle::ie8-support.html.twig') }}

        <title>{% block meta_title %}{% block title %}{{ fuz.site_default_title | trans }}{% endblock %}{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}{% block description %}{{ fuz.site_description | trans }}{% endblock %}{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}{% block keywords %}{% endblock %}{% endblock %}">
        <meta name="author" content="{% block meta_author %}{% block author %}{% endblock %}{% endblock %}">
        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon"/>
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"/>

        {# CSS #}
        {% block css %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
            <link href="{{ asset('bundles/base/bootstrap-submenu/css/bootstrap-submenu.min.css') }}" rel="stylesheet" media="screen">
            <link href="{{ asset('bundles/base/jquery-ui-1.11.2/jquery-ui.min.css') }}" rel="stylesheet" media="screen">
            <link rel="stylesheet" href="{{ asset('bundles/base/css/base.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/app.css') }}">
    {% endblock %}
</head>
<body>
    <div class="container">
        {% block head %}
            <nav class="navbar navbar-default row">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">{{ 'base.nav' | trans }}</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('home') }}">
                            <div class="navbar-logo">
                                {% block logo %} <img src="{{ asset('apple-touch-icon.png') }}">{% endblock %}
                            </div>
                            <div class="pull-left">
                                {% block brand %}{{ fuz.site_brand }}{% endblock %}
                            </div>
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                    {% block translations %}{% endblock %}
                {% block login %}{% endblock %}
            {% block left_menu %}{% endblock %}
        {% block right_menu %}{% endblock %}
    </div>
</div>
</nav>
{% endblock %}

<div id="body">
    {% block flash %}{{ include('BraincraftedBootstrapBundle::flash.html.twig', {'close': true}) }}{% endblock %}
    {% if block('title') != '' %}
        <h1>{{ block('title') }}</h1>
    {% endif %}
{% block body %}{% endblock %}
</div>

</div>

{# Ajax-loader gif #}
<div id="wait" class="hide" aria-hidden="true">
    <div class="text-center">
        <img src="{{ asset('bundles/base/img/wait.gif') }}" alt="{{ 'base.wait' | trans }}"/>
    </div>
</div>

{# JS #}
{% block js %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/base/bootstrap-submenu/js/bootstrap-submenu.min.js') }}"></script>
    <script src="{{ asset('bundles/base/jquery-ui-1.11.2/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('bundles/base/js/jquery.domajax.js') }}"></script>
    <script src="{{ asset('bundles/base/js/jquery.collection.js') }}"></script>
    <script src="{{ asset('bundles/base/js/base.js') }}"></script>
    <script src="{{ asset('bundles/app/js/app.js') }}"></script>
{% endblock %}

<script type="text/javascript">
    $('.dropdown-submenu > a').submenupicker();
</script>

{% block script %}{% endblock %}

</body>
</html>
